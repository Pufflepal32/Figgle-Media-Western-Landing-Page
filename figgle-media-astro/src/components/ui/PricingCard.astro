---
import Button from './Button.astro';

export interface Props {
  name: string;
  price: string;
  description: string;
  features: string[];
  popular?: boolean;
  ctaText: string;
  ctaHref?: string;
}

const {
  name,
  price,
  description,
  features,
  popular = false,
  ctaText,
  ctaHref = '/contact'
} = Astro.props;
---

<div class:list={['pricing-card', 'animate-on-scroll', { popular }]}>
  {popular && <span class="popular-badge">Most Popular</span>}

  <div class="pricing-header">
    <h3 class="pricing-name">{name}</h3>
    <p class="pricing-description">{description}</p>
  </div>

  <div class="pricing-price">
    <span class="price">{price}</span>
  </div>

  <ul class="pricing-features">
    {features.map((feature) => (
      <li>
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="20 6 9 17 4 12"/>
        </svg>
        <span>{feature}</span>
      </li>
    ))}
  </ul>

  <Button href={ctaHref} variant={popular ? 'primary' : 'secondary'}>
    {ctaText}
  </Button>
</div>

<style>
  .pricing-card {
    background: var(--color-bg-card);
    border-radius: 8px;
    padding: var(--spacing-lg);
    border: 3px solid var(--color-tan);
    position: relative;
    display: flex;
    flex-direction: column;
    transition: all 0.3s ease;
  }

  .pricing-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  }

  .pricing-card.popular {
    border-color: var(--color-accent-primary);
  }

  @media (min-width: 992px) {
    .pricing-card.popular {
      transform: scale(1.02);
    }

    .pricing-card.popular:hover {
      transform: scale(1.02) translateY(-5px);
    }
  }

  .popular-badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background: var(--color-accent-primary);
    color: var(--color-cream);
    padding: 0.5rem 1rem;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    border-radius: 4px;
    white-space: nowrap;
  }

  .pricing-header {
    text-align: center;
    margin-bottom: var(--spacing-md);
  }

  .pricing-name {
    font-family: var(--font-display);
    font-size: 1.4rem;
    color: var(--color-bg-dark);
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .pricing-description {
    color: var(--color-text-dark);
    opacity: 0.8;
    font-size: 0.95rem;
    margin: 0;
    line-height: 1.5;
  }

  .pricing-price {
    text-align: center;
    padding: var(--spacing-md) 0;
    border-top: 2px solid var(--color-tan);
    border-bottom: 2px solid var(--color-tan);
    margin-bottom: var(--spacing-md);
  }

  .price {
    display: block;
    font-family: var(--font-display);
    font-size: 2rem;
    color: var(--color-accent-primary);
    letter-spacing: 1px;
  }

  .pricing-features {
    list-style: none;
    padding: 0;
    margin: 0 0 var(--spacing-md) 0;
    flex-grow: 1;
  }

  .pricing-features li {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
    color: var(--color-text-dark);
    font-size: 0.9rem;
    line-height: 1.4;
  }

  .pricing-features svg {
    width: 18px;
    height: 18px;
    color: var(--color-accent-primary);
    flex-shrink: 0;
    margin-top: 2px;
  }

  .pricing-features span {
    flex: 1;
  }

  .pricing-card :global(.btn) {
    width: 100%;
    text-align: center;
    justify-content: center;
  }
</style>
