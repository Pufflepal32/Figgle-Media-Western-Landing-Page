---
import Button from './Button.astro';

export interface Props {
  title: string;
  description: string;
  buttonText: string;
  buttonHref: string;
}

const { title, description, buttonText, buttonHref } = Astro.props;
---

<section class="cta-section">
    <div class="container">
        <div class="cta-card">
            <h2>{title}</h2>
            <p>{description}</p>
            <Button href={buttonHref} variant="primary" size="large">
                {buttonText}
            </Button>
        </div>
    </div>
</section>

<style>
  .cta-section {
    padding: var(--spacing-lg) 0;
    background: var(--color-bg-main);
  }

  .cta-card {
    background: linear-gradient(135deg, var(--color-accent-primary) 0%, #a84d30 100%);
    padding: var(--spacing-lg);
    text-align: center;
    border-radius: 8px;
    position: relative;
    overflow: hidden;
  }

  .cta-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M30 0L30 60M0 30L60 30' stroke='%23ffffff' stroke-width='1' stroke-opacity='0.05'/%3E%3C/svg%3E");
    opacity: 0.3;
  }

  h2 {
    font-family: var(--font-display);
    font-size: clamp(1.8rem, 4vw, 2.5rem);
    margin-bottom: var(--spacing-sm);
    position: relative;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: var(--color-cream);
  }

  p {
    font-size: 1.1rem;
    margin-bottom: var(--spacing-md);
    opacity: 0.95;
    position: relative;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    color: var(--color-cream);
  }

  .cta-card :global(.btn) {
    position: relative;
    background: var(--color-cream);
    color: var(--color-accent-primary);
    border-color: var(--color-cream);
  }

  .cta-card :global(.btn:hover) {
    background: var(--color-bg-dark);
    color: var(--color-cream);
    border-color: var(--color-bg-dark);
  }
</style>
