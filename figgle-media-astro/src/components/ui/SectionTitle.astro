---
export interface Props {
  subtitle?: string;
  align?: 'center' | 'left';
}

const { subtitle, align = 'center' } = Astro.props;
---

<div class:list={['section-header', `align-${align}`]}>
    <h2 class="section-title">
        <slot />
    </h2>
    {subtitle && <p class="section-subtitle">{subtitle}</p>}
</div>

<style>
  .section-header {
    margin-bottom: var(--spacing-lg);
  }

  .align-center {
    text-align: center;
  }

  .align-left {
    text-align: left;
  }

  .align-left .section-subtitle {
    margin-left: 0;
    margin-right: 0;
  }
</style>
