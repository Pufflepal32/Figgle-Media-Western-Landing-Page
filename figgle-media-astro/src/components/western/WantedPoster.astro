---
export interface Props {
  headerText?: string;
  title?: string;
  subtitle?: string;
  reward?: string;
  imageSrc?: string;
  imageAlt?: string;
}

const {
  headerText = 'WANTED',
  title = 'CREATIVE PARTNERS',
  subtitle = 'For Outstanding Marketing Results',
  reward = 'REWARD: Massive Growth',
  imageSrc = '/images/logo.png',
  imageAlt = 'Figgle Media'
} = Astro.props;
---

<div class="wanted-poster">
    <div class="poster-header">{headerText}</div>
    <div class="poster-content">
        <div class="poster-icon">
            <img src={imageSrc} alt={imageAlt} width="120" height="120">
        </div>
        <div class="poster-text">
            <strong>{title}</strong>
            <span>{subtitle}</span>
        </div>
    </div>
    <div class="poster-reward">{reward}</div>
</div>

<style>
  .wanted-poster {
    background: #f5e6d3;
    padding: var(--spacing-md);
    width: 320px;
    text-align: center;
    border: 8px solid var(--color-rust);
    box-shadow:
        0 0 0 4px var(--color-tan),
        8px 8px 20px rgba(0, 0, 0, 0.4);
    transform: rotate(-2deg);
    transition: transform 0.3s ease;
  }

  .wanted-poster:hover {
    transform: rotate(0deg) scale(1.02);
  }

  .poster-header {
    font-family: var(--font-display);
    font-size: 2.5rem;
    color: var(--color-bg-dark);
    border-bottom: 3px solid var(--color-rust);
    padding-bottom: var(--spacing-xs);
    margin-bottom: var(--spacing-sm);
    letter-spacing: 5px;
  }

  .poster-content {
    padding: var(--spacing-sm) 0;
  }

  .poster-icon {
    width: 120px;
    height: 120px;
    margin: 0 auto var(--spacing-sm);
    background: var(--color-bg-dark);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .poster-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .poster-text {
    color: var(--color-bg-dark);
  }

  .poster-text strong {
    display: block;
    font-family: var(--font-display);
    font-size: 1.2rem;
    margin-bottom: 0.25rem;
  }

  .poster-text span {
    font-size: 0.9rem;
    opacity: 0.8;
  }

  .poster-reward {
    margin-top: var(--spacing-sm);
    padding-top: var(--spacing-sm);
    border-top: 3px solid var(--color-rust);
    font-family: var(--font-display);
    font-size: 1.1rem;
    color: var(--color-accent-primary);
    letter-spacing: 2px;
  }

  @media (max-width: 480px) {
    .wanted-poster {
      width: 280px;
      padding: var(--spacing-sm);
    }

    .poster-header {
      font-size: 2rem;
    }
  }
</style>
