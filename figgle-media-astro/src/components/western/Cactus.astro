---
export interface Props {
  class?: string;
  variant?: 'full' | 'simple';
}

const { class: className, variant = 'full' } = Astro.props;
---

{variant === 'full' ? (
  <svg class:list={['cactus', className]} viewBox="0 0 60 120">
      <rect x="25" y="20" width="10" height="100" fill="currentColor"/>
      <rect x="0" y="40" width="25" height="8" fill="currentColor"/>
      <rect x="0" y="40" width="8" height="35" fill="currentColor"/>
      <rect x="35" y="55" width="25" height="8" fill="currentColor"/>
      <rect x="52" y="55" width="8" height="25" fill="currentColor"/>
  </svg>
) : (
  <svg class:list={['cactus', className]} viewBox="0 0 60 120">
      <rect x="25" y="30" width="10" height="90" fill="currentColor"/>
      <rect x="35" y="50" width="20" height="8" fill="currentColor"/>
      <rect x="47" y="50" width="8" height="30" fill="currentColor"/>
  </svg>
)}
