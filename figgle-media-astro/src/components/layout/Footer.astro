---
import { navigation } from '@/data/navigation';

const currentYear = new Date().getFullYear();
---

<footer class="footer">
    <div class="container">
        <div class="footer-content">
            <div class="footer-brand">
                <div class="footer-logo-wrapper">
                    <img src="/images/logo.svg" alt="Figgle Media" class="footer-logo" width="70" height="70">
                    <span class="footer-logo-text">Figgle Media</span>
                </div>
                <p>Digital marketing that rides hard and delivers results. Your trusted partner on the digital frontier.</p>
            </div>
            <div class="footer-links">
                <h4>Quick Links</h4>
                <ul>
                    {navigation.main.map((item) => (
                        <li><a href={item.href}>{item.label}</a></li>
                    ))}
                </ul>
            </div>
            <div class="footer-links">
                <h4>Services</h4>
                <ul>
                    {navigation.services.map((item) => (
                        <li><a href={item.href}>{item.label}</a></li>
                    ))}
                </ul>
            </div>
            <div class="footer-links">
                <h4>Industries</h4>
                <ul>
                    {navigation.industries.slice(0, 5).map((item) => (
                        <li><a href={item.href}>{item.label}</a></li>
                    ))}
                </ul>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; {currentYear} Figgle Media. All rights reserved.</p>
            <div class="footer-legal">
                <a href="/privacy">Privacy Policy</a>
                <a href="/terms">Terms of Service</a>
            </div>
            <p>Crafted with grit in the digital frontier.</p>
        </div>
    </div>
    <div class="rope-border"></div>
</footer>

<style>
  .footer-logo-wrapper {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: var(--spacing-sm);
  }

  .footer-logo {
    width: 60px;
    height: 60px;
    object-fit: contain;
  }

  .footer-logo-text {
    font-family: var(--font-heading);
    font-size: 1.6rem;
    font-weight: 700;
    color: var(--color-cream);
    white-space: nowrap;
  }

  .footer-legal {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    margin: 0.5rem 0;
  }

  .footer-legal a {
    color: var(--color-text-muted);
    font-size: 0.85rem;
    transition: color 0.3s ease;
  }

  .footer-legal a:hover {
    color: var(--color-cream);
  }

  .footer-content {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-lg);
  }

  @media (max-width: 992px) {
    .footer-content {
      grid-template-columns: 1fr 1fr;
    }

    .footer-brand {
      grid-column: 1 / -1;
      text-align: center;
      max-width: 100%;
    }

    .footer-logo-wrapper {
      justify-content: center;
    }
  }

  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .footer-logo-wrapper {
      justify-content: center;
    }
  }
</style>
