<style>
  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0.75rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .nav-logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-shrink: 0;
  }

  .nav-logo img {
    width: 50px;
    height: 50px;
    object-fit: contain;
  }

  .nav-logo span {
    font-family: var(--font-heading);
    font-size: 1.3rem;
    font-weight: 700;
    color: var(--color-cream);
    white-space: nowrap;
  }

  .nav-menu {
    display: flex;
    list-style: none;
    gap: 0.25rem;
    margin: 0;
    padding: 0;
  }

  .nav-menu > li {
    position: relative;
  }

  .nav-link {
    display: flex;
    align-items: center;
    gap: 0.35rem;
    font-family: var(--font-heading);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 0.8rem;
    padding: 0.5rem 0.75rem;
    white-space: nowrap;
    color: var(--color-cream);
    transition: color 0.3s ease;
  }

  .nav-link:hover {
    color: var(--color-accent-primary);
  }

  .dropdown-arrow {
    transition: transform 0.3s ease;
  }

  .has-dropdown:hover .dropdown-arrow {
    transform: rotate(180deg);
  }

  .dropdown-menu {
    position: absolute;
    top: 100%;
    left: 0;
    background: var(--color-bg-dark);
    border: 2px solid var(--color-rust);
    border-radius: 4px;
    min-width: 200px;
    padding: 0.5rem 0;
    list-style: none;
    opacity: 0;
    visibility: hidden;
    transform: translateY(10px);
    transition: all 0.3s ease;
    z-index: 100;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  }

  .has-dropdown:hover .dropdown-menu {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .dropdown-link {
    display: block;
    padding: 0.6rem 1rem;
    color: var(--color-cream);
    font-family: var(--font-heading);
    font-size: 0.85rem;
    transition: all 0.3s ease;
  }

  .dropdown-link:hover {
    background: var(--color-bg-light);
    color: var(--color-accent-primary);
  }

  .nav-phone {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-cream);
    font-family: var(--font-heading);
    font-weight: 600;
    font-size: 0.9rem;
    white-space: nowrap;
    flex-shrink: 0;
  }

  .nav-phone:hover {
    color: var(--color-accent-primary);
  }

  .nav-phone svg {
    width: 18px;
    height: 18px;
    flex-shrink: 0;
  }

  .nav-social {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.35rem;
    flex-shrink: 0;
  }

  .nav-social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-cream);
    transition: color 0.3s ease;
  }

  .nav-social-link:hover {
    color: var(--color-accent-primary);
  }

  .nav-social-link svg {
    width: 18px;
    height: 18px;
  }

  .nav-cta {
    background: var(--color-accent-primary);
    color: var(--color-cream);
    border: none;
    padding: 0.6rem 1.2rem;
    font-family: var(--font-heading);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 0.85rem;
    white-space: nowrap;
    flex-shrink: 0;
    transition: all 0.3s ease;
  }

  .nav-cta:hover {
    background: #a84d30;
    transform: translateY(-2px);
  }

  .hamburger {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 10px;
  }

  .hamburger span {
    width: 25px;
    height: 2px;
    background: var(--color-cream);
    transition: all 0.3s ease;
  }

  .mobile-call-btn {
    display: none;
    align-items: center;
    justify-content: center;
    color: var(--color-cream);
    padding: 0.5rem;
  }

  .mobile-call-btn:hover {
    color: var(--color-accent-primary);
  }

  .mobile-menu-extras {
    display: none;
  }

  @media (max-width: 1200px) {
    .nav-social {
      display: none;
    }
  }

  @media (max-width: 1100px) {
    .nav-phone {
      display: none;
    }
  }

  @media (max-width: 992px) {
    .nav-cta {
      display: none;
    }

    .nav-link {
      font-size: 0.75rem;
      padding: 0.5rem;
    }
  }

  @media (max-width: 768px) {
    .nav-menu {
      position: fixed;
      top: 70px;
      left: 0;
      right: 0;
      background: var(--color-bg-dark);
      flex-direction: column;
      align-items: stretch;
      padding: 1rem;
      gap: 0;
      transform: translateY(-150%);
      transition: transform 0.3s ease;
      border-bottom: 2px solid var(--color-rust);
      max-height: calc(100vh - 70px);
      overflow-y: auto;
    }

    .nav-menu.active {
      transform: translateY(0);
    }

    .nav-link {
      padding: 0.75rem 1rem;
      font-size: 0.9rem;
    }

    .dropdown-menu {
      position: static;
      opacity: 1;
      visibility: visible;
      transform: none;
      border: none;
      box-shadow: none;
      padding-left: 1rem;
      display: none;
      background: transparent;
    }

    .has-dropdown.open .dropdown-menu {
      display: block;
    }

    .hamburger {
      display: flex;
    }

    .mobile-call-btn {
      display: flex;
    }

    .hamburger.active span:nth-child(1) {
      transform: rotate(45deg) translate(5px, 5px);
    }

    .hamburger.active span:nth-child(2) {
      opacity: 0;
    }

    .hamburger.active span:nth-child(3) {
      transform: rotate(-45deg) translate(5px, -5px);
    }

    .mobile-menu-extras {
      display: block;
      border-top: 1px solid var(--color-rust);
      margin-top: 1rem;
      padding-top: 1rem;
    }

    .mobile-call-link {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      color: var(--color-cream);
      font-family: var(--font-heading);
      font-weight: 600;
      font-size: 1rem;
      padding: 0.75rem 1rem;
    }

    .mobile-call-link:hover {
      color: var(--color-accent-primary);
    }

    .mobile-social-links {
      display: flex;
      gap: 1rem;
      padding: 1rem;
      justify-content: center;
    }

    .mobile-social-links a {
      color: var(--color-cream);
      transition: color 0.3s ease;
    }

    .mobile-social-links a:hover {
      color: var(--color-accent-primary);
    }
  }
</style>

<script>
  // Mobile dropdown toggle
  document.querySelectorAll('.has-dropdown > .nav-link').forEach(link => {
    link.addEventListener('click', (e) => {
      if (window.innerWidth <= 768) {
        e.preventDefault();
        const parent = link.parentElement;
        parent?.classList.toggle('open');
      }
    });
  });
</script>
