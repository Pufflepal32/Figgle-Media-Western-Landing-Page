---
import { navigation } from '@/data/navigation';
---

<nav class="navbar">
    <div class="nav-container">
        <a href="/" class="nav-logo">
            <img src="/images/logo.svg" alt="Figgle Media" width="50" height="50">
            <span>Figgle Media</span>
        </a>
        <ul class="nav-menu">
            {navigation.main.map((item) => (
                <li class={item.dropdown ? 'has-dropdown' : ''}>
                    <a href={item.href} class="nav-link">
                        {item.label}
                        {item.dropdown && (
                            <svg class="dropdown-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="12" height="12">
                                <path d="M6 9l6 6 6-6"/>
                            </svg>
                        )}
                    </a>
                    {item.dropdown && (
                        <ul class="dropdown-menu">
                            {item.dropdown.map((subItem) => (
                                <li>
                                    <a href={subItem.href} class="dropdown-link">{subItem.label}</a>
                                </li>
                            ))}
                        </ul>
                    )}
                </li>
            ))}
        </ul>
        <a href="tel:+16813077514" class="nav-phone">
            <svg viewBox="0 0 24 24" fill="currentColor" width="18" height="18">
                <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
            </svg>
            (681)-307-7514
        </a>
        <a href="/contact" class="nav-cta">Get Started</a>
        <button class="hamburger" aria-label="Menu">
            <span></span>
            <span></span>
            <span></span>
        </button>
    </div>
</nav>

<style>
  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0.75rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .nav-logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-shrink: 0;
  }

  .nav-logo img {
    width: 50px;
    height: 50px;
    object-fit: contain;
  }

  .nav-logo span {
    font-family: var(--font-heading);
    font-size: 1.3rem;
    font-weight: 700;
    color: var(--color-cream);
    white-space: nowrap;
  }

  .nav-menu {
    display: flex;
    list-style: none;
    gap: 0.25rem;
    margin: 0;
    padding: 0;
  }

  .nav-menu > li {
    position: relative;
  }

  .nav-link {
    display: flex;
    align-items: center;
    gap: 0.35rem;
    font-family: var(--font-heading);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 0.8rem;
    padding: 0.5rem 0.75rem;
    white-space: nowrap;
    color: var(--color-cream);
    transition: color 0.3s ease;
  }

  .nav-link:hover {
    color: var(--color-accent-primary);
  }

  .dropdown-arrow {
    transition: transform 0.3s ease;
  }

  .has-dropdown:hover .dropdown-arrow {
    transform: rotate(180deg);
  }

  .dropdown-menu {
    position: absolute;
    top: 100%;
    left: 0;
    background: var(--color-bg-dark);
    border: 2px solid var(--color-rust);
    border-radius: 4px;
    min-width: 200px;
    padding: 0.5rem 0;
    list-style: none;
    opacity: 0;
    visibility: hidden;
    transform: translateY(10px);
    transition: all 0.3s ease;
    z-index: 100;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  }

  .has-dropdown:hover .dropdown-menu {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .dropdown-link {
    display: block;
    padding: 0.6rem 1rem;
    color: var(--color-cream);
    font-family: var(--font-heading);
    font-size: 0.85rem;
    transition: all 0.3s ease;
  }

  .dropdown-link:hover {
    background: var(--color-bg-light);
    color: var(--color-accent-primary);
  }

  .nav-phone {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-cream);
    font-family: var(--font-heading);
    font-weight: 600;
    font-size: 0.9rem;
    white-space: nowrap;
    flex-shrink: 0;
  }

  .nav-phone:hover {
    color: var(--color-accent-primary);
  }

  .nav-phone svg {
    width: 18px;
    height: 18px;
    flex-shrink: 0;
  }

  .nav-cta {
    background: var(--color-accent-primary);
    color: var(--color-cream);
    border: none;
    padding: 0.6rem 1.2rem;
    font-family: var(--font-heading);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 0.85rem;
    white-space: nowrap;
    flex-shrink: 0;
    transition: all 0.3s ease;
  }

  .nav-cta:hover {
    background: #a84d30;
    transform: translateY(-2px);
  }

  .hamburger {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 10px;
  }

  .hamburger span {
    width: 25px;
    height: 2px;
    background: var(--color-cream);
    transition: all 0.3s ease;
  }

  @media (max-width: 1100px) {
    .nav-phone {
      display: none;
    }
  }

  @media (max-width: 992px) {
    .nav-cta {
      display: none;
    }

    .nav-link {
      font-size: 0.75rem;
      padding: 0.5rem;
    }
  }

  @media (max-width: 768px) {
    .nav-menu {
      position: fixed;
      top: 70px;
      left: 0;
      right: 0;
      background: var(--color-bg-dark);
      flex-direction: column;
      align-items: stretch;
      padding: 1rem;
      gap: 0;
      transform: translateY(-150%);
      transition: transform 0.3s ease;
      border-bottom: 2px solid var(--color-rust);
      max-height: calc(100vh - 70px);
      overflow-y: auto;
    }

    .nav-menu.active {
      transform: translateY(0);
    }

    .nav-link {
      padding: 0.75rem 1rem;
      font-size: 0.9rem;
    }

    .dropdown-menu {
      position: static;
      opacity: 1;
      visibility: visible;
      transform: none;
      border: none;
      box-shadow: none;
      padding-left: 1rem;
      display: none;
      background: transparent;
    }

    .has-dropdown.open .dropdown-menu {
      display: block;
    }

    .hamburger {
      display: flex;
    }

    .hamburger.active span:nth-child(1) {
      transform: rotate(45deg) translate(5px, 5px);
    }

    .hamburger.active span:nth-child(2) {
      opacity: 0;
    }

    .hamburger.active span:nth-child(3) {
      transform: rotate(-45deg) translate(5px, -5px);
    }
  }
</style>

<script>
  // Mobile dropdown toggle
  document.querySelectorAll('.has-dropdown > .nav-link').forEach(link => {
    link.addEventListener('click', (e) => {
      if (window.innerWidth <= 768) {
        e.preventDefault();
        const parent = link.parentElement;
        parent?.classList.toggle('open');
      }
    });
  });
</script>
