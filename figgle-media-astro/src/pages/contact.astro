---
import PageLayout from '@/layouts/PageLayout.astro';
import ContactForm from '@/components/ui/ContactForm.astro';
---

<PageLayout
  title="Contact Figgle Media"
  description="Get in touch with Figgle Media for a free consultation about your digital marketing needs. We help construction companies grow with SEO, web design, and social media."
  heroTitle="Contact Us"
  heroSubtitle="Ready to grow your construction business? Let's talk about how we can help you dominate your local market."
  breadcrumbs={[
    { label: 'Home', href: '/' },
    { label: 'Contact' }
  ]}
>
  <section class="contact-section">
    <div class="container">
      <div class="contact-wrapper">
        <div class="contact-form-wrapper">
          <h2>Send Us a Message</h2>
          <p>Fill out the form below and we'll get back to you within 24 hours.</p>
          <ContactForm />
        </div>

        <div class="contact-info-wrapper">
          <div class="info-block">
            <h3>Get in Touch</h3>
            <div class="info-item">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                <polyline points="22,6 12,13 2,6"/>
              </svg>
              <div>
                <strong>Email</strong>
                <a href="mailto:Figglemedia@gmail.com">Figglemedia@gmail.com</a>
              </div>
            </div>
            <div class="info-item">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
              </svg>
              <div>
                <strong>Phone</strong>
                <a href="tel:+16813077514">(681) 307-7514</a>
              </div>
            </div>
          </div>

          <div class="info-block">
            <h3>What to Expect</h3>
            <ul class="expect-list">
              <li>
                <span class="step-number">1</span>
                <div>
                  <strong>Discovery Call</strong>
                  <p>We'll learn about your business, goals, and current marketing efforts.</p>
                </div>
              </li>
              <li>
                <span class="step-number">2</span>
                <div>
                  <strong>Custom Strategy</strong>
                  <p>We'll create a tailored marketing plan designed for your specific needs.</p>
                </div>
              </li>
              <li>
                <span class="step-number">3</span>
                <div>
                  <strong>Clear Proposal</strong>
                  <p>You'll receive a transparent proposal with pricing and expected outcomes.</p>
                </div>
              </li>
            </ul>
          </div>

          <div class="info-block social-block">
            <h3>Follow Us</h3>
            <div class="social-links-large">
              <a href="#" aria-label="Facebook">
                <svg viewBox="0 0 24 24" fill="currentColor"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/></svg>
              </a>
              <a href="#" aria-label="Instagram">
                <svg viewBox="0 0 24 24" fill="currentColor"><rect x="2" y="2" width="20" height="20" rx="5" ry="5" fill="none" stroke="currentColor" stroke-width="2"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z" fill="none" stroke="currentColor" stroke-width="2"/><circle cx="17.5" cy="6.5" r="1.5"/></svg>
              </a>
              <a href="#" aria-label="LinkedIn">
                <svg viewBox="0 0 24 24" fill="currentColor"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect x="2" y="9" width="4" height="12"/><circle cx="4" cy="4" r="2"/></svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</PageLayout>

<style>
  .contact-section {
    padding: var(--spacing-xl) 0;
    background: var(--color-bg-main);
  }

  .contact-wrapper {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: var(--spacing-xl);
    align-items: start;
  }

  .contact-form-wrapper h2 {
    font-family: var(--font-display);
    font-size: 1.5rem;
    color: var(--color-cream);
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .contact-form-wrapper > p {
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-md);
  }

  .contact-info-wrapper {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .info-block {
    background: var(--color-bg-light);
    padding: var(--spacing-md);
    border-radius: 8px;
    border-left: 4px solid var(--color-accent-primary);
  }

  .info-block h3 {
    font-family: var(--font-display);
    font-size: 1.1rem;
    color: var(--color-accent-primary);
    margin-bottom: var(--spacing-sm);
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .info-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .info-item:last-child {
    margin-bottom: 0;
  }

  .info-item svg {
    width: 24px;
    height: 24px;
    color: var(--color-accent-primary);
    flex-shrink: 0;
    margin-top: 2px;
  }

  .info-item strong {
    display: block;
    color: var(--color-cream);
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 0.25rem;
  }

  .info-item a {
    color: var(--color-text-muted);
    transition: color 0.3s ease;
  }

  .info-item a:hover {
    color: var(--color-cream);
  }

  .expect-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .expect-list li {
    display: flex;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .expect-list li:last-child {
    margin-bottom: 0;
  }

  .step-number {
    width: 32px;
    height: 32px;
    background: var(--color-accent-primary);
    color: var(--color-cream);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-heading);
    font-weight: 700;
    flex-shrink: 0;
  }

  .expect-list strong {
    display: block;
    color: var(--color-cream);
    margin-bottom: 0.25rem;
  }

  .expect-list p {
    color: var(--color-text-muted);
    font-size: 0.9rem;
    line-height: 1.5;
    margin: 0;
  }

  .social-links-large {
    display: flex;
    gap: var(--spacing-sm);
  }

  .social-links-large a {
    width: 50px;
    height: 50px;
    background: var(--color-bg-main);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-cream);
    transition: all 0.3s ease;
    border: 2px solid var(--color-tan);
  }

  .social-links-large a:hover {
    background: var(--color-accent-primary);
    border-color: var(--color-accent-primary);
  }

  .social-links-large svg {
    width: 24px;
    height: 24px;
  }

  @media (max-width: 992px) {
    .contact-wrapper {
      grid-template-columns: 1fr;
    }
  }
</style>
