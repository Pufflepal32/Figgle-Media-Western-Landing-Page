---
import ServiceLayout from '@/layouts/ServiceLayout.astro';
import { services, getService, getSubService } from '@/data/services';

export function getStaticPaths() {
  const paths: Array<{
    params: { service: string; subservice: string };
    props: { service: typeof services[0]; subservice: NonNullable<typeof services[0]['subservices']>[0] };
  }> = [];

  services.forEach((service) => {
    if (service.subservices) {
      service.subservices.forEach((subservice) => {
        paths.push({
          params: { service: service.slug, subservice: subservice.slug },
          props: { service, subservice },
        });
      });
    }
  });

  return paths;
}

const { service, subservice } = Astro.props;
---

<ServiceLayout
  title={`${subservice.title} for Construction Companies | Figgle Media`}
  description={subservice.description}
  service={{
    title: subservice.title,
    slug: subservice.slug,
    description: subservice.description,
    icon: service.icon,
    features: subservice.features,
  }}
  parentService={{
    title: service.title,
    slug: service.slug,
  }}
>
  <div class="subservice-intro">
    <p>{subservice.description}</p>

    <p>
      As part of our comprehensive {service.title.toLowerCase()} services, {subservice.title.toLowerCase()} focuses on the specific tactics and strategies that drive measurable results for construction companies.
    </p>
  </div>

  <div class="why-matters">
    <h2>Why {subservice.title} Matters</h2>
    <p>
      For construction companies looking to grow their online presence, {subservice.title.toLowerCase()} is a critical component of any successful digital marketing strategy. It helps establish your authority, improve visibility, and generate qualified leads from customers actively searching for your services.
    </p>
  </div>

  <div class="related-services">
    <h2 class="section-title">Related <span>Services</span></h2>
    <div class="related-grid">
      {service.subservices?.filter(s => s.slug !== subservice.slug).map((related) => (
        <a href={`/services/${service.slug}/${related.slug}`} class="related-card">
          <h3>{related.title}</h3>
          <p>{related.description}</p>
        </a>
      ))}
    </div>
  </div>
</ServiceLayout>

<style>
  .subservice-intro {
    margin-bottom: var(--spacing-lg);
  }

  .subservice-intro p {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--color-text-light);
    margin-bottom: 1rem;
  }

  .why-matters {
    background: var(--color-bg-light);
    padding: var(--spacing-lg);
    border-radius: 8px;
    margin-bottom: var(--spacing-lg);
    border-left: 4px solid var(--color-accent-primary);
  }

  .why-matters h2 {
    font-family: var(--font-heading);
    font-size: 1.4rem;
    color: var(--color-cream);
    margin-bottom: 1rem;
  }

  .why-matters p {
    color: var(--color-text-muted);
    line-height: 1.7;
    margin: 0;
  }

  .related-services {
    margin-top: var(--spacing-xl);
    padding-top: var(--spacing-xl);
    border-top: 2px solid var(--color-bg-light);
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--spacing-md);
    margin-top: var(--spacing-lg);
  }

  .related-card {
    background: var(--color-bg-light);
    padding: var(--spacing-md);
    border-radius: 8px;
    border: 2px solid transparent;
    transition: all 0.3s ease;
  }

  .related-card:hover {
    border-color: var(--color-accent-primary);
    transform: translateY(-3px);
  }

  .related-card h3 {
    font-family: var(--font-heading);
    font-size: 1.1rem;
    color: var(--color-cream);
    margin-bottom: 0.5rem;
  }

  .related-card p {
    color: var(--color-text-muted);
    font-size: 0.95rem;
    line-height: 1.5;
    margin: 0;
  }
</style>
