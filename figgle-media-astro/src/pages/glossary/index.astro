---
import PageLayout from '@/layouts/PageLayout.astro';
import { glossaryTerms } from '@/data/glossary';
---

<PageLayout
  title="Marketing Glossary | Digital Marketing Terms Explained"
  description="Learn the essential digital marketing terms every construction company owner should know. Plain-English explanations of SEO, PPC, and more."
  heroTitle="Marketing Glossary"
  heroSubtitle="Digital marketing terminology explained in plain English. No jargon, just clear explanations."
  breadcrumbs={[
    { label: 'Home', href: '/' },
    { label: 'Glossary' }
  ]}
>
  <section class="glossary-section">
    <div class="container">
      <div class="glossary-intro">
        <p>Digital marketing is full of acronyms and technical terms that can be confusing. We've put together this glossary to help construction company owners understand the key concepts that matter for growing their business online.</p>
      </div>

      <div class="glossary-grid">
        {glossaryTerms.map((term) => (
          <a href={`/glossary/${term.slug}`} class="glossary-card animate-on-scroll">
            <span class="term-label">{term.term}</span>
            <h2>{term.title}</h2>
            <p>{term.description}</p>
            <span class="read-more">
              Read Full Article
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>
</PageLayout>

<style>
  .glossary-section {
    padding: var(--spacing-xl) 0;
    background: var(--color-bg-main);
  }

  .glossary-intro {
    max-width: 700px;
    margin: 0 auto var(--spacing-xl);
    text-align: center;
  }

  .glossary-intro p {
    font-size: 1.1rem;
    color: var(--color-text-light);
    line-height: 1.7;
  }

  .glossary-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: var(--spacing-md);
  }

  .glossary-card {
    background: var(--color-bg-card);
    padding: var(--spacing-lg);
    border-radius: 8px;
    border: 3px solid var(--color-tan);
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .glossary-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    border-color: var(--color-accent-primary);
  }

  .term-label {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background: var(--color-accent-primary);
    color: var(--color-cream);
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    border-radius: 4px;
    margin-bottom: 0.75rem;
    align-self: flex-start;
  }

  .glossary-card h2 {
    font-family: var(--font-heading);
    font-size: 1.3rem;
    color: var(--color-bg-dark);
    margin-bottom: 0.75rem;
  }

  .glossary-card p {
    color: var(--color-text-dark);
    line-height: 1.6;
    flex-grow: 1;
    margin-bottom: var(--spacing-sm);
  }

  .read-more {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-accent-primary);
    font-weight: 600;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .read-more svg {
    width: 16px;
    height: 16px;
    transition: transform 0.3s ease;
  }

  .glossary-card:hover .read-more svg {
    transform: translateX(4px);
  }
</style>
