---
import BaseLayout from './BaseLayout.astro';

export interface Props {
  title: string;
  description: string;
  heroTitle?: string;
  heroSubtitle?: string;
  canonicalURL?: string;
  ogImage?: string;
}

const {
  title,
  description,
  heroTitle,
  heroSubtitle,
  canonicalURL,
  ogImage
} = Astro.props;
---

<BaseLayout title={title} description={description} canonicalURL={canonicalURL} ogImage={ogImage}>

  {heroTitle && (
    <section class="page-hero">
      <div class="container">
        <h1 class="page-hero-title">{heroTitle}</h1>
        {heroSubtitle && <p class="page-hero-subtitle">{heroSubtitle}</p>}
      </div>
    </section>
  )}

  <slot />
</BaseLayout>

<style>
  .page-hero {
    padding: 8rem 0 4rem;
    background: linear-gradient(135deg, var(--color-bg-dark) 0%, var(--color-bg-light) 100%);
    text-align: center;
  }

  .page-hero-title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 3.5rem);
    text-transform: uppercase;
    letter-spacing: 3px;
    margin-bottom: 1rem;
    color: var(--color-cream);
  }

  .page-hero-subtitle {
    font-size: 1.2rem;
    color: var(--color-text-muted);
    max-width: 600px;
    margin: 0 auto;
  }
</style>
