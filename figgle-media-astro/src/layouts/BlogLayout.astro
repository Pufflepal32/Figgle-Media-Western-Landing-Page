---
import BaseLayout from './BaseLayout.astro';
import Breadcrumbs from '@/components/layout/Breadcrumbs.astro';
import Schema from '@/components/seo/Schema.astro';

export interface Props {
  title: string;
  description: string;
  publishDate: Date;
  author?: string;
  category?: string;
  tags?: string[];
  ogImage?: string;
}

const { title, description, publishDate, author = 'Figgle Media Team', category, tags, ogImage } = Astro.props;

const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'Blog', href: '/blog' },
  { label: title },
];

const formattedDate = publishDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<BaseLayout title={`${title} | Figgle Media Blog`} description={description} ogImage={ogImage}>
  <Schema type="Article" data={{ title, description, publishDate: publishDate.toISOString(), author }} />
  <Breadcrumbs items={breadcrumbs} />

  <article class="blog-post">
    <header class="post-header">
      <div class="container">
        {category && <span class="post-category">{category}</span>}
        <h1 class="post-title">{title}</h1>
        <div class="post-meta">
          <span class="post-author">By {author}</span>
          <span class="post-date">{formattedDate}</span>
        </div>
      </div>
    </header>

    <div class="post-content">
      <div class="container container-narrow">
        <slot />
      </div>
    </div>

    {tags && tags.length > 0 && (
      <footer class="post-footer">
        <div class="container container-narrow">
          <div class="post-tags">
            <span class="tags-label">Tags:</span>
            {tags.map((tag) => (
              <a href={`/blog?tag=${tag}`} class="tag">{tag}</a>
            ))}
          </div>
        </div>
      </footer>
    )}
  </article>
</BaseLayout>

<style>
  .blog-post {
    padding-top: 80px;
  }

  .post-header {
    padding: 4rem 0;
    background: linear-gradient(135deg, var(--color-bg-dark) 0%, var(--color-bg-light) 100%);
    text-align: center;
  }

  .post-category {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: var(--color-accent-primary);
    color: var(--color-cream);
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    border-radius: 4px;
    margin-bottom: 1rem;
  }

  .post-title {
    font-family: var(--font-display);
    font-size: clamp(1.8rem, 4vw, 3rem);
    color: var(--color-cream);
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .post-meta {
    display: flex;
    justify-content: center;
    gap: 2rem;
    color: var(--color-text-muted);
    font-size: 0.95rem;
  }

  .container-narrow {
    max-width: 800px;
  }

  .post-content {
    padding: var(--spacing-xl) 0;
    background: var(--color-bg-main);
  }

  .post-content :global(h2) {
    font-family: var(--font-display);
    font-size: 1.8rem;
    color: var(--color-cream);
    margin: 2rem 0 1rem;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .post-content :global(h3) {
    font-family: var(--font-heading);
    font-size: 1.4rem;
    color: var(--color-cream);
    margin: 1.5rem 0 0.75rem;
  }

  .post-content :global(p) {
    color: var(--color-text-light);
    line-height: 1.8;
    margin-bottom: 1.5rem;
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    color: var(--color-text-light);
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }

  .post-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .post-content :global(a) {
    color: var(--color-accent-primary);
    text-decoration: underline;
  }

  .post-content :global(a:hover) {
    color: var(--color-tan);
  }

  .post-content :global(blockquote) {
    border-left: 4px solid var(--color-accent-primary);
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: var(--color-text-muted);
  }

  .post-footer {
    padding: var(--spacing-md) 0;
    background: var(--color-bg-dark);
    border-top: 2px solid var(--color-rust);
  }

  .post-tags {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .tags-label {
    color: var(--color-text-muted);
    font-weight: 600;
  }

  .tag {
    display: inline-block;
    padding: 0.35rem 0.75rem;
    background: var(--color-bg-light);
    color: var(--color-cream);
    font-size: 0.85rem;
    border-radius: 4px;
    border: 1px solid var(--color-tan);
    transition: all 0.3s ease;
  }

  .tag:hover {
    background: var(--color-accent-primary);
    border-color: var(--color-accent-primary);
  }
</style>
